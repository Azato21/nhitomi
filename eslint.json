{
  "rules": {
    "curly": "off",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": false
      }
    ],
    "semi": [
      "warn",
      "never"
    ],
    "comma-dangle": [
      "warn",
      "never"
    ],
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "no-empty": "warn",
    "no-unused-expressions": "off",
    "no-console": "off",
    "prefer-const": [
      "warn",
      {
        "destructuring": "any"
      }
    ],
    "@typescript-eslint/member-delimiter-style": [
      "warn",
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": false
        },
        "singleline": {
          "delimiter": "comma",
          "requireLast": false
        }
      }
    ],
    "@typescript-eslint/explicit-member-accessibility": "off"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "@typescript-eslint/explicit-member-accessibility": [
          "warn",
          {
            "accessibility": "no-public"
          }
        ]
      }
    }
  ]
}
